<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <placeholder width="233" height="86"></placeholder>
  <requires lib="gtk" version="4.0"></requires>
  <object class="GtkAdjustment" id="adjustmentAngle">
    <property name="lower">-180</property>
    <property name="upper">180</property>
    <property name="step-increment">1</property>
    <property name="page-increment">15</property>
  </object>
  <object class="GtkPopover" id="libraryPopover">
    <property name="width-request">360</property>
    <property name="height-request">440</property>
  </object>
  <object class="GtkAdjustment" id="offset">
    <property name="upper">100</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <object class="GtkBox" id="main-box">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkGrid" id="main-grid">
        <property name="name">mainGrid</property>
        <property name="hexpand">True</property>
        <property name="column-spacing">4</property>
        <property name="row-spacing">4</property>
        <child>
          <object class="GtkMenuButton" id="libraryBtn">
            <property name="always-show-arrow">true</property>
            <property name="icon-name">gradient-library</property>
            <property name="focusable">True</property>
            <property name="focus-on-click">False</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Gradient library</property>
            <property name="valign">center</property>
            <property name="popover">libraryPopover</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="hexpand-set">true</property>
            <property name="hexpand">true</property>
            <property name="orientation">horizontal</property>
            <child>
              <object class="GtkToggleButton" id="type-linear">
                <property name="receives-default">True</property>
                <property name="icon-name">paint-gradient-linear</property>
                <property name="group">type-radial</property>
                <property name="has-frame">true</property>
                <property name="tooltip-text" translatable="yes">Linear gradient</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="type-radial">
                <property name="receives-default">True</property>
                <property name="icon-name">paint-gradient-radial</property>
                <property name="has-frame">true</property>
                <property name="tooltip-text" translatable="yes">Radial gradient</property>
              </object>
            </child>
            <style>
              <class name="linked"></class>
            </style>
            <layout>
              <property name="column">2</property>
              <property name="row">0</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkMenuButton" id="repeat-mode">
            <property name="icon-name">gradient-spread-reflect</property>
            <property name="always-show-arrow">true</property>
            <property name="focusable">True</property>
            <property name="focus-on-click">False</property>
            <property name="receives-default">True</property>
            <property name="halign">fill</property>
            <property name="valign">center</property>
            <property name="has-frame">true</property>
            <property name="tooltip-text" translatable="yes">Repeat mode</property>
            <layout>
              <property name="column">5</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="angle-box">
            <property name="hexpand">false</property>
            <property name="hexpand-set">true</property>
            <property name="vexpand">false</property>
            <property name="vexpand-set">false</property>
            <property name="orientation">horizontal</property>
            <layout>
              <property name="column">5</property>
              <property name="row">1</property>
            </layout>
            <child>
              <object class="gtkmm__CustomObject_InkSpinButton" id="angle">
                <property name="hexpand">true</property>
                <property name="hexpand-set">true</property>
                <property name="suffix" translatable="no">Â°</property>
                <property name="valign">center</property>
                <property name="focusable">True</property>
                <property name="tooltip-text" translatable="yes">Adjust the angle of the gradient</property>
                <property name="adjustment">adjustmentAngle</property>
                <property name="digits">1</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="turnBtn">
                <property name="icon-name">object-rotate-right</property>
                <property name="valign">center</property>
                <property name="halign">end</property>
                <property name="focusable">True</property>
                <property name="focus-on-click">False</property>
                <property name="receives-default">True</property>
                <property name="tooltip-text" translatable="yes">Rotate gradient 90 degrees</property>
              </object>
            </child>
            <style>
              <class name="linked"></class>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="offset-box">
            <property name="hexpand">false</property>
            <property name="hexpand-set">true</property>
            <property name="orientation">horizontal</property>
            <child>
              <object class="gtkmm__CustomObject_InkSpinButton" id="offsetSpin">
                <property name="hexpand">true</property>
                <property name="hexpand-set">true</property>
                <property name="suffix" translatable="no">%</property>
                <property name="focusable">True</property>
                <property name="tooltip-text" translatable="yes">Offset of selected stop</property>
                <property name="margin-top">0</property>
                <property name="adjustment">offset</property>
                <property name="digits">1</property>
                <property name="valign">center</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="reverseBtn">
                <property name="visible">true</property>
                <property name="halign">end</property>
                <property name="icon-name">object-flip-horizontal</property>
                <property name="valign">center</property>
                <property name="focus-on-click">False</property>
                <property name="receives-default">True</property>
                <property name="tooltip-text" translatable="yes">Reverse the direction of the gradient</property>
                <property name="has-frame">true</property>
              </object>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
            <style>
              <class name="linked"></class>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="gradientBox">
            <property name="hexpand">True</property>
            <property name="orientation">vertical</property>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
              <property name="column-span">6</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
            <property name="hexpand-set">true</property>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
            <property name="hexpand-set">true</property>
            <layout>
              <property name="column">4</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
      </object>
      <!--dim: 3, 4-->
    </child>
  </object>
</interface>
